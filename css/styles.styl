color1 = #ff0041
color2 = #fff
color3 = #d8d8d8
heightpanel = 100%
widthpanel = 21%

.container
	width 100%
	height 100%
	background #fff
.menu
	background color3
	width widthpanel
	height heightpanel	
.main
	display block
	background-color color2
	position fixed
	top 0
	width 79%
	padding 10px
.main__camera
	height 800px
	background-color color2
.kinect__camera
	background-color color1
	margin 50px
	height 84%
.main__nextbtn
	background-color color2
	height 10%
	text-align right
	padding 20px
.main, .menu
	display inline-block
.menu__user
	background #ff0
	background-image url(../img/man-profile.png)
	height 380px
ul
	list-style-type none
	margin 0
	padding 0
	text-align center
ul li
	color color2
	text-align right
	text-transform uppercase
	width 220px
	height 30px
	margin 10px auto
	padding 16px 6px 6px 6px 
	border-radius 6px
	font-weight bold
	letter-spacing 0.2em
.menu__name, li
	background color1
.outer-circle
	margin -90px auto 0 auto
	background-color rgba(0, 0, 0, 0.3)
	border-radius 50%
	height 180px
	width 180px
	position relative
.inner-circle
	background color1
	border-radius 50%
	color color2
	font-size 0.7em
	height 120px
	left 50%
	margin -60px 0px 0px -60px
	position absolute
	text-align center
	text-transform uppercase
	top 50%
	width 120px
.name
	position absolute
	padding-top 50px
	left 0px
.menu__logo
	background color1
	text-align center
	position fixed
	bottom 0
