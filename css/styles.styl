color1 = #ff0049
color2 = #fff

.container
	width 100%
	height 100%
	background #fff
.menu
	background #d8d8d8
	width 320px
	height 100%	
.main, .menu
	display inline-block
.menu__user
	background #ff0
	background-image url(../img/man-profile.png)
	height 380px
ul
	list-style-type none
	margin 0
	padding 0
	text-align center
ul li
	text-align center
.menu__name, ul
	background color1
.outer-circle
	margin -90px auto 0 auto
	background-color rgba(0, 0, 0, 0.3)
	border-radius 50%
	height 180px
	width 180px
	position relative
.inner-circle
	background color1
	border-radius 50%
	color color2
	font-size 0.7em
	height 120px
	left 50%
	margin -60px 0px 0px -60px
	position absolute
	text-align center
	text-transform uppercase
	top 50%
	width 120px
.name
	position absolute
	padding-top 50px
	left 0px